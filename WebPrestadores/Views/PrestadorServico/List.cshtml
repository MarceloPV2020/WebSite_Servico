@model PrestadorServicoListViewModel

<div>
    <h2>@Model.CategoriaServicoAtual</h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var prestador in Model.PrestadoresServico)
        {
            <partial name="_PrestadorServicoResumo" for="@prestador" />
            @if ((bool?)ViewData["Prestador"] == true)
            {
                <a asp-area="" asp-controller="PrestadorServico" asp-action="Avaliar" asp-route-id="@prestador.Id">Avaliar</a>
                <a asp-area="" asp-controller="PrestadorServico" asp-action="ListaAvaliacao" asp-route-id="@prestador.Id">Visualizar Avaliações</a>
            }
        }
    </div>
</div>