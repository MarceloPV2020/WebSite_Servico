@model PrestadorServicoListViewModel

@using Microsoft.AspNetCore.Identity;
@using WebPrestadores.Repositories.Interfaces;
@inject IPrestadorServicoRepository _prestadorServicoRepository;
@inject UserManager<IdentityUser> _userManager;

<div id="carouselProfissao" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in _prestadorServicoRepository.GetPrestadorServicoListViewModel(_userManager.GetUserId(User), "")?.PrestadoresServico)
        {
            <partial name="_PrestadorResumo" for="@item" />
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselPrestadores" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselPrestadores" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
    </button>
</div>