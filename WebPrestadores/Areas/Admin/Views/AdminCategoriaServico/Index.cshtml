@model IEnumerable<CategoriaServico>
<h1>Categorias</h1>

<p>
    <a asp-action="Create" class="btn btn-info"> <i class="glyphicon glyphicon-plus"></i> Adicionar Nova Categoria </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <div class="btn-group btn-group-xs">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"> <i class="glyphicon glyphicon-pencil"></i> Alterar </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>