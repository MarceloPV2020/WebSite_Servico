@model PrestadorServico

<h1>Lista de Cidades</h1>

<p>
    <a asp-action="AdicionarCidade" asp-route-idPrestadorServico="@Model.Id" class="btn btn-info"> <i class="glyphicon glyphicon-plus"></i> Adicionar Cidade </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Cidade
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.ListaPrestadorServicoCidade)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade.Nome)
                </td>
                <td>
                    <a asp-action="DeleteCidade" asp-route-id="@item.Id" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a action="action" class="btn btn-info" style="background-color:lightyellow" onclick="history.go(-1);"> <i class="glyphicon glyphicon-step-backward"></i> Voltar </a>