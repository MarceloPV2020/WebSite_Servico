@model PrestadorServicoCidade

<h1>Excluir Cidade</h1>

<h3>Tem certeza que deseja excluir a cidade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade.Nome)
        </dd>
    </dl>

    <form asp-action="DeleteCidade">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
