@model PrestadorServicoCidade

<h3>Tem certeza que deseja excluir a cidade?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Cidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade.Nome)
        </dd>
    </dl>

    <form asp-action="DeleteCidade">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a action="action" class="btn btn-info" style="background-color:lightyellow" onclick="history.go(-1);"> <i class="glyphicon glyphicon-step-backward"></i> Voltar </a>
    </form>
</div>
