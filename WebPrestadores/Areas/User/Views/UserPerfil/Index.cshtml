@model Usuario

@{
    ViewData["Title"] = "Meus Dados";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="EnderecoDescricao" class="control-label"></label>
                <input asp-for="EnderecoDescricao" class="form-control" />
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.Id">Alterar</a> |
            </div>
        </form>
    </div>
</div>
